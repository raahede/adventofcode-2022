{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": ["node"]
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": []
}
